nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
    div.container-fluid
        div.row
            div.col-md-8.col-md-offset-2
                ul.nav.navbar-nav
                    li
                        a(href="/") Hacker News
                    li.active
                        a(href="/submit") Submit

                ul.nav.navbar-nav.pull-right
                    li Hi {{user.name}}

div.container-fluid(ng-controller="SubmitController")
    div.row
        div.col-md-8.col-md-offset-2
            form(ng-submit="submitArticle(article)" role="form")
                div.form-group
                    label(for="title") Title
                    input.form-control(type="text" ng-model="article.title" placeholder="Enter the title" id="title")
                div.form-group
                    label(for="url") URL
                    input.form-control(type="text" ng-model="article.url" placeholder="Paste the URL" id="url")

                button.btn.btn-default(type="submit") Submit
